page {
  background-color: #edeeec;
}
.fb_main {
  padding: 10rpx;
}
.fb_main .fb_title {
  padding: 10rpx;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 10rpx;
  background-color: #fff;
  text-align: center;
  padding: 15rpx;
  font-size: 30rpx;
}
.fb_main .fb_content {
  background-color: #fdfefd;
  margin-top: 30rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  background-color: #f6f7f6;
  font-size: 40rpx;
  margin-top: 20rpx;
}
.fb_main .fb_content .fb_tool .up_img_wrap {
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button {
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
}
