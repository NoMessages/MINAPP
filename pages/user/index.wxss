page {
  background-color: #ecebe8;
}
.user_infor_wrap {
  position: relative;
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
}
.user_infor_wrap .user_img_wrap {
  position: relative;
}
.user_infor_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_infor_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  text-align: center;
}
.user_infor_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_infor_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_infor_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 50%;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 20%;
}
.user_infor_wrap .user_btn navigator {
  color: #fff;
  font-size: 36rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content .user_main .history_info_wrap {
  display: flex;
  background-color: #fff;
  text-align: center;
}
.user_content .user_main .history_info_wrap .his_info_foot {
  flex: 1;
  padding: 10rpx;
}
.user_content .order_info_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .order_info_wrap .order_title {
  border-bottom: 1rpx solid #eee;
  padding: 15rpx;
}
.user_content .order_info_wrap .info_order {
  display: flex;
  text-align: center;
}
.user_content .order_info_wrap .info_order .order_info {
  flex: 1;
  padding: 15rpx;
}
.user_content .recive_address_mana {
  background-color: #fff;
  margin-top: 10rpx;
  padding: 10rpx;
}
.user_content .sendSomeAdv_info {
  background-color: #fff;
  margin-top: 10rpx;
}
.user_content .sendSomeAdv_info .info_item_list {
  padding: 15rpx 5rpx;
  border-bottom: 1rpx solid #eee;
}
.user_content .sendSomeAdv_info .adv_content {
  display: flex;
  justify-content: space-between;
}
.user_content .reccoment_info {
  background-color: #fff;
  margin-top: 10rpx;
  margin-bottom: 100rpx;
  padding: 15rpx;
}
