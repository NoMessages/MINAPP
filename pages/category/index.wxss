page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .activiy {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_menu {
  flex: 5;
}
.cates .cates_container .right_menu .goods_title {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .right_menu .goods_title .deteminal {
  color: #eee;
}
.cates .cates_container .right_menu .goods_title .title {
  padding: 10rpx 0;
}
.cates .cates_container .right_menu .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_menu .goods_list navigator {
  width: 33.33%;
}
.cates .cates_container .right_menu .goods_list navigator image {
  width: 50%;
}
